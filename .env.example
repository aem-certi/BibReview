########################################
# .env.example - Exemplo de configuração
# Copie este arquivo para '.env' e preencha as chaves
########################################

# =======================
# CHAVES DE API
# =======================
OPENAI_API_KEY=<SUA_CHAVE_OPENAI_AQUI>
#SCOPUS_API_KEY=<SUA_CHAVE_SCOPUS_AQUI>
SPRINGER_API_KEY=<SUA_CHAVE_SPRINGER_AQUI>

# OpenAlex só precisa de e-mail (opcional)
OPENALEX_EMAIL=seu-email@exemplo.com

# =======================
# CONFIGURAÇÕES DE SISTEMA
# =======================
ENVIRONMENT=development
LOG_LEVEL=INFO
LANGUAGE=en
USE_GPU=false
CACHE_ENABLED=true
CACHE_EXPIRE=3600

# =======================
# CONFIGURAÇÕES DE BUSCA DE PAPERS
# =======================
START_YEAR=2022
END_YEAR=2025
MAX_RESULTS=100000

# =======================
# CONFIGURAÇÕES DE DIRETÓRIOS
# =======================
DATA_SUBFOLDER=data
LOGS_SUBFOLDER=logs
LLM_SUBFOLDER=llm
REPORTS_SUBFOLDER=reports
FIGURES_SUBFOLDER=figures

# =======================
# OPENAI-LLM-CONFIG
# =======================
EMBEDDING_MODEL=text-embedding-ada-002
GPT_MODEL=gpt-4
RESPONSE_FORMAT=text
GENERATION_TEMPERATURE=0.3
GENERATION_P=1.0